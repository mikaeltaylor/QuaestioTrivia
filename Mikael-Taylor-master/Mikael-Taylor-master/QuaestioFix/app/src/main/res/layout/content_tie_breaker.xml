<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mikael.quaestiofix.TieBreaker"
    tools:showIn="@layout/activity_tie_breaker"
    android:background="@drawable/hoola">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnRock"
        android:background="@drawable/rock"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnPaper"
        android:background="@drawable/paper"
        android:layout_alignTop="@+id/imgBtnScissors"
        android:layout_above="@+id/imgBtnRock"
        android:layout_alignLeft="@+id/imgBtnRock"
        android:layout_alignStart="@+id/imgBtnRock"
        android:layout_toLeftOf="@+id/imgBtnScissors"
        android:layout_toStartOf="@+id/imgBtnScissors" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnScissors"
        android:background="@drawable/scissors"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TIE BREAKER!"
        android:id="@+id/textView"
        android:textColor="#fefefe"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rock, Paper, Scissors?"
        android:id="@+id/textView2"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/imgBtnPaper"
        android:layout_centerHorizontal="true"
        android:textColor="#fefdfd" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/paper"
        android:layout_below="@+id/imgBtnScissors"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
